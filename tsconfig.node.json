{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "outDir": "dist/",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true,
    "swc": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "server/*.js",
    "index.js",
    "server/**/*.ts"
  ]
}